{
  "name": "packrat-monorepo",
  "private": true,
  "version": "2.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean:all": "bun run --cwd apps/* clean && bun run --cwd packages/* clean",
    "clean": "bun run clean:all && bunx rimraf node_modules",
    "check:deps": "manypkg check",
    "fix:deps": "bun manypkg fix",
    "check-types": "tsc --noEmit",
    "check-types-watch": "tsc --noEmit --watch",
    "expo": "cd apps/expo && bun start",
    "android": "cd apps/expo && bun android",
    "ios": "cd apps/expo && bun ios",
    "server": "bun run --cwd packages/api dev"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.23.0",
    "@types/bun": "latest",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.2"
  }
}