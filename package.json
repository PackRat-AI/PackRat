{
  "name": "packrat-world",
  "version": "0.0.1",
  "description": "PackRat is the ultimate adventure planner designed for those who love to explore the great outdoors. Our app helps users plan and organize their trips with ease, whether it's a weekend camping trip, a day hike, or a cross-country road trip.",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "clean:all": "npm run clean:packages && npm run clean:client && npm run clean:server && rm -rf package-lock.json yarn.lock node_modules",
    "clean:packages": "rm -rf packages/validations/node_modules packages/validations/package-lock.json packages/validations/dist",
    "clean:client": "rm -rf client/node_modules client/package-lock.json client/dist",
    "clean:server": "rm -rf server/node_modules server/package-lock.json server/dist",
    "build:prod": "yarn && yarn build:tsc && yarn build:expo",
    "build:prod:docker": "docker build -t packrat-app -f Dockerfile.prod .",
    "build:expo": "yarn expo:export",
    "build:tsc": "yarn build:tsc:server",
    "build:tsc:packages": "cd packages/validations && yarn build",
    "build:tsc:server": "cd server && yarn build",
    "install:all": "npm install --loglevel info && npm run install:packages --loglevel info &&  npm run install:client --loglevel info && npm run install:server --loglevel info",
    "install:packages": "npm --prefix ./packages/validations install --loglevel info",
    "install:client": "npm --prefix ./client install --loglevel info",
    "install:server": "npm --prefix ./server install --loglevel info",
    "setup": "yarn && yarn setup:client && yarn setup:server",
    "setup:client": "cd client && yarn setup",
    "setup:server": "cd server && yarn setup",
    "expo:export": "cd client && cp app.example.json app.json && npx expo export --platform web",
    "start": "cd server && yarn start:ts-node",
    "start:prod": "cd server && yarn start:prod",
    "start:prod:ts-node": "cd server && yarn start:ts-node",
    "dev:client": "cd client && yarn start",
    "dev:server": "cd server && yarn start",
    "test": "yarn test:all",
    "test:all": "yarn test:client && yarn test:server",
    "test:client": "cd client && yarn test",
    "test:server": "cd server && yarn test",
    "lint": "yarn lint:all",
    "lint:all": "yarn lint:client && yarn lint:server",
    "lint:client": "cd client && yarn lint",
    "lint:server": "cd server && yarn lint",
    "format": "yarn format:all",
    "format:all": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "fix": "manypkg fix",
    "postinstall": "npm run build",
    "build": "for dir in packages/* client server; do (cd \"$dir\" && npm run build); done",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary react-native-web-lite@canary",
    "check-deps": "check-dependency-version-consistency .",
    "copy:env:client": "cp .env client/.env",
    "copy:env:server": "cp .env server/.env",
    "copy:env:packages": "cp .env packages/.env",
    "copy:env:all": "yarn copy:env:client && yarn copy:env:server && yarn copy:env:packages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-bierman/PackRat.git"
  },
  "keywords": [
    "outdoors",
    "hiking",
    "camping",
    "road trip",
    "travel",
    "adventure",
    "planner",
    "packing",
    "packing list",
    "packing checklist",
    "packing planner",
    "packing organizer",
    "packing app",
    "packing checklist app",
    "packing list app",
    "packing planner app"
  ],
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": [
      "cd client && yarn run lint",
      "prettier --write"
    ],
    "server/**/*.{js,ts}": [
      "cd server && yarn run lint",
      "prettier --write"
    ]
  },
  "author": "Andrew Bierman",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/andrew-bierman/PackRat/issues"
  },
  "homepage": "https://github.com/andrew-bierman/PackRat#readme",
  "packageManager": "yarn@3.6.3",
  "dependencies": {
    "@manypkg/cli": "^0.21.0",
    "@rnmapbox/maps": "^10.0.15",
    "check-dependency-version-consistency": "^4.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "typescript": "^5.2.2"
  }
}
