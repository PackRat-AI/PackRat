{
  "name": "packrat-monorepo",
  "private": true,
  "version": "2.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean:all": "bun run --cwd apps/* clean && bun run --cwd packages/* clean",
    "clean": "bun run clean:all && bunx rimraf node_modules",
    "check-deps": "check-dependencies",
    "check-deps:fix": "check-dependencies --fix"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "check-dependencies": "^2.0.0"
  }
}
