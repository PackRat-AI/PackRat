{
  "name": "packrat-world",
  "version": "0.0.1",
  "description": "PackRat is the ultimate adventure planner designed for those who love to explore the great outdoors. Our app helps users plan and organize their trips with ease, whether it's a weekend camping trip, a day hike, or a cross-country road trip.",
  "private": true,
  "workspaces": [
    "client",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules packages/api/node_modules client/node_modules packages/node_modules package-lock.json yarn.lock packages/api/package-lock.json client/package-lock.json packages/package-lock.json packages/api/yarn.lock client/yarn.lock packages/yarn.lock packages/api/dist client/dist packages/dist",
    "build:prod": "yarn && yarn build:tsc && yarn build:expo",
    "build:prod:docker": "docker build -t packrat-app -f Dockerfile.prod .",
    "build:expo": "yarn expo:export",
    "build:tsc": "yarn build:tsc:api",
    "build:tsc:packages": "cd packages/validations && yarn build",
    "build:tsc:api": "cd packages/api && yarn build",
    "install:all": "yarn install:packages && yarn install:client && yarn install:api",
    "install:client": "cd client && yarn",
    "install:api": "cd packages/api && yarn",
    "install:packages": "cd packages && yarn",
    "setup": "yarn && yarn setup:client && yarn setup:api",
    "setup:client": "cd client && yarn setup",
    "setup:api": "cd packages/api && yarn setup",
    "expo:export": "cd client && cp app.example.json app.json && npx expo export --platform web",
    "start": "cd packages/api && yarn start:ts-node",
    "start:prod": "cd packages/api && yarn start:prod",
    "start:prod:ts-node": "cd packages/api && yarn start:ts-node",
    "dev:client": "cd client && yarn start",
    "dev:api": "cd packages/api && yarn start",
    "test": "yarn test:all",
    "test:all": "yarn test:client && yarn test:api",
    "test:client": "cd client && yarn test",
    "test:api": "cd packages/api && yarn test",
    "lint": "yarn lint:all",
    "lint:all": "yarn lint:client && yarn lint:api",
    "lint:client": "cd client && yarn lint",
    "lint:api": "packages/api && yarn lint",
    "format": "yarn format:all",
    "format:all": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "fix": "manypkg fix",
    "preinstall": "npx only-allow yarn",
    "postinstall": "yarn build",
    "build": "yarn workspaces foreach --all run build",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary",
    "check-deps": "check-dependency-version-consistency .",
    "copy:env:client": "cp .env client/.env",
    "copy:env:api": "cp .env packages/api/.env",
    "copy:env:packages": "cp .env packages/.env",
    "copy:env:all": "yarn copy:env:client && yarn copy:env:api && yarn copy:env:packages"
  },
  "engines": {
    "node": ">=18.16.1",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.0.1",
  "dependencies": {
    "@manypkg/cli": "^0.21.0",
    "check-dependency-version-consistency": "^4.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": [
      "cd client && yarn run lint",
      "prettier --write"
    ],
    "packages/api/**/*.{js,ts}": [
      "cd packages/api && yarn run lint",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-bierman/PackRat.git"
  },
  "author": "Andrew Bierman",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/andrew-bierman/PackRat/issues"
  },
  "homepage": "https://github.com/andrew-bierman/PackRat#readme",
  "keywords": [
    "outdoors",
    "hiking",
    "camping",
    "road trip",
    "travel",
    "adventure",
    "planner",
    "packing",
    "packing list",
    "packing checklist",
    "packing planner",
    "packing organizer",
    "packing app",
    "packing checklist app",
    "packing list app",
    "packing planner app"
  ]
}
