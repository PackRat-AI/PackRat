{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": ".",
      "importHelpers": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "preserveSymlinks": true,
      "incremental": true,
      "jsx": "react-jsx",
      "module": "system",
      "moduleResolution": "node",
      "noEmitOnError": false,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "experimentalDecorators": true,
      "useUnknownInCatchVariables": false,
      "preserveConstEnums": true,
      // DONT DO THIS so jsdoc will remain
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": false,
      "strictNullChecks": true,
      "target": "es2020",
      "types": ["node"],
      "lib": ["dom", "esnext"],
      "paths": {
        "~/config/*": ["packages/app/config/*"],
        "~/constants/*": ["packages/app/constants/*"],
        "~/components/*": ["packages/app/components/*"],
        "~/context/*": ["packages/app/context/*"],
        "~/utils/*": ["packages/app/utils/*"],
        "~/hooks/*": ["packages/app/hooks/*"],
        "~/screens/*": ["packages/app/screens/*"],
        "~/theme/*": ["packages/app/theme/*"],
       "~/store/*": ["packages/app/store/*"],
        "@trpc": ["server/src/routes/index"]
      },
    },
    "extends": "expo/tsconfig.base",
    "exclude": ["_"],
    "typeAcquisition": {
      "enable": true
    }
  }