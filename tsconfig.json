{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "guides-app/*": ["./apps/guides/*"],
      "landing-app/*": ["./apps/landing/*"],
      "expo-app/*": ["./apps/expo/*"],
      "app/*": ["./packages/app/*"],
      "@packrat/api/*": ["./packages/api/src/*"],
      "@packrat/ui/*": ["./packages/ui/*"],
      "@packrat/ui/nativewindui/*": ["./packages/ui/nativewindui/*"],
      "nativewindui/*": ["./apps/expo/components/ui/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": ["apps/**/*.ts", "apps/**/*.tsx", "packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.expo",
    "**/coverage"
  ]
}
