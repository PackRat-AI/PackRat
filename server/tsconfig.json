{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "es6",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src/**/*.ts"
  ]
}